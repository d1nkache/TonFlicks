<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Прозрачный фон -->
    <solid android:color="@android:color/transparent"/>

    <!-- Розовая обводка (1dp) -->
    <stroke
        android:width="1dp"
        android:color="#FF4081"/> <!-- Ярко-розовый цвет -->

    <!-- Скругленные углы -->
    <corners android:radius="4dp"/>

    <!-- Внутренние отступы чтобы текст не прилипал к границам -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>
</shape>